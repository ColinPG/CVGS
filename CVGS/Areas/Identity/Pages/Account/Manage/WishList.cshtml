@page
@model CVGS.Areas.Identity.Pages.Account.Manage.WishListModel
@{
    ViewData["Title"] = "Wish List";
    ViewData["ActivePage"] = ManageNavPages.WishList;
}
<partial name="Manage/_StatusMessage" for="StatusMessage" />
    <form method="post">
        <table class="table">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => Model.Input.wishListItems.First().Game.EnglishName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Input.wishListItems.First().Game.EsrbRatingCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Input.wishListItems.First().Game.Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Input.wishListItems.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@Model.Input.wishListItems[i].GameId" />
                            @Html.DisplayFor(modelItem => Model.Input.wishListItems[i].Game.EnglishName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.wishListItems[i].Game.EsrbRatingCodeNavigation.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Input.wishListItems[i].Game.Price)
                        </td>
                        <td>
                            <button asp-page="WishList" asp-page-handler="Remove" asp-route-id="@Model.Input.wishListItems[i].Game.Guid" class="btn btn-link">Remove</button>
                        </td>
                    </tr>
                }

                </tr>
            </tbody>
        </table>
    </form>