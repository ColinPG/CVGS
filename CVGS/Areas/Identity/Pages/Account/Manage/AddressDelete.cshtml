@page
@model CVGS.Areas.Identity.Pages.Account.Manage.AddressDeleteModel
@{
    if (Model._isMailing)
    {
        ViewData["Title"] = "Delete Mailing Address";
    }
    else
    {
        ViewData["Title"] = "Delete Shipping Address";
    }
    ViewData["ActivePage"] = ManageNavPages.Addresses;
}
<partial name="_StatusMessage" for="StatusMessage" />

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    @if (Model._isMailing)
    {
        <h4>Delete Mailing Address</h4>
    }
    else
    {
        <h4>Delete Shipping Address</h4>
    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.ApartmentNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.ApartmentNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Province)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Province)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.CountryNavigation.EnglishName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.CountryNavigation.EnglishName)
        </dd>

    </dl>

    <form asp-route-id="@Model.Input.Id" asp-route-isMailing="@Model._isMailing" method="post">
        <input type="hidden" asp-for="Input.Id" />
        <input id="delete-address" type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Addresses">Back</a>
    </form>
</div>
